Algoritmo atleta
	
	Escribir "Ingrese tiempo recorrido el día lunes";
	Leer d1;
	Escribir "Ingrese tiempo recorrido el día martes";
	Leer d2;
	Escribir "Ingrese tiempo recorrido el día miércoles";
	Leer d3;
	Escribir "Ingrese tiempo recorrido el día jueves";
	Leer d4;
	Escribir "Ingrese tiempo recorrido el día viernes";
	Leer d5;
	Escribir "Ingrese tiempo recorrido el día sábado";
	Leer d6;
	
	x<- (d1+d2+d3+d4+d5+d6)/6;
	
	Escribir "Promedio de tiempo recorrido durante la semana", x;
	
FinAlgoritmo
